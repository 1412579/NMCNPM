<div class="main-content">

	{{>header-admin}}

	<hr /> {{>breadcrum}}
	<h2>{{title}}</h2>
	<form method="post" enctype="multipart/form-data" id="addcate" class="form-horizontal form-groups-bordered">
		<div class="row">
			<div class="col-md-8">

				<div class="panel panel-primary" data-collapsed="0">
					<div class="panel-heading">
						<div class="panel-title">
							{{title}}
						</div>
					</div>

					<div class="panel-body">
						<div class="form-group">
							<label class="col-sm-3 control-label">Danh mục</label>

							<div class="col-sm-5">
								<select class="form-control" name="cate">
									{{{category}}}
								</select>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">Ảnh thumbnail</label>
							<div class="col-sm-5"> 
								{{#if article.thumbnail}}
								<img src="/upload/thumbnail/{{article.thumbnail}}" width="400" height="auto" alt="">
								{{else}}
								<input type="file" name="thumbnail" class="form-control"> 
								{{/if}}
							</div>
						</div>
						
						{{#if article.thumbnail}}
							<div class="form-group">
							<label class="col-sm-3 control-label">Chọn ảnh thumbnail khác</label>
							<div class="col-sm-5"> 
								<input type="file" name="thumbnail" class="form-control"> 
							</div>
						</div>
						{{/if}}
						
						

						

						<div class="form-group">
							<label class="col-sm-3 control-label">Tên bài viết</label>

							<div class="col-sm-8">

								<input type="text" name="title" value="{{article.title}}" id="title" class="form-control" placeholder="Tên bài viết" required>

							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">Mô tả ngắn</label>

							<div class="col-sm-8">
								<textarea name="summary" id="summary" class="textarea" placeholder="Thông tin mô tả ngắn hiển thị trên trang chủ" style="width: 100%; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{article.summary}}</textarea>

							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">Nội dung bài viết</label>

							<div class="col-sm-8">
								<textarea name="content" id="content" class="textarea" placeholder="Nội dùng bài viêt" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{{article.content}}</textarea>

							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">Ẩn/hiện bài viết</label>

							<div class="col-sm-5">

								<div class="bs-example">
									<div class="make-switch" data-on="primary" data-off="info">
										{{#if article.ishide}}
										<input type="checkbox" name="ishide" checked>
										{{else}}
										<input type="checkbox" name="ishide">
										{{/if}}
										
									</div>
								</div>

							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">Nổi bật bài viết (đưa lên khung nổi bật)</label>

							<div class="col-sm-5">

								<div class="bs-example">
									<div class="make-switch" data-on="primary" data-off="info">
										{{#if article.ishide}}
										<input type="checkbox" name="ishighlight" checked>
										{{else}}
										<input type="checkbox" name="ishighlight">
										{{/if}}
										
									</div>
								</div>

							</div>
						</div>

					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-8" style="text-align: center;">

					<div class="bs-example">
						<button type="submit" class="btn btn-green btn-icon">
							Sửa bài viết
							<i class="entypo-check"></i>
						</button>
					</div>

				</div>
			</div>
	</form>
	</div>

	<br />

	<!-- Footer -->
	{{>footer-admin}}
</div>






