
	<script>
		$(document).ready(function() {
			$("#addcate").validate({
				rules: {
					name: "required",
					price: "required",
				},
				messages: {
					name: "Vui lòng nhập tên sản phẩm..!",
					price: "Vui lòng nhập giá..!",
				}
			});
		});
	</script>

	<div class="main-content">
				
		{{>header-admin}}
		
		<hr />
		{{>breadcrum}}
		<h2>{{title}}</h2>
		<form method="post" enctype="multipart/form-data" action="/admin/product/add" id="addcate" class="form-horizontal form-groups-bordered">
		<div class="row">
			<div class="col-md-8">
					
					<div class="panel panel-primary" data-collapsed="0">
						<div class="panel-heading">
							<div class="panel-title">
								{{title}}
							</div>
						</div>
						
						<div class="panel-body">
								<div class="form-group">
									<label class="col-sm-3 control-label">Danh mục</label>
									
									<div class="col-sm-5">
										<select class="form-control" name="cate">
										{{#each cate}}
											<option value="{{id}}">{{name}}</option>
										{{/each}}
										</select>
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">Ảnh thumbnail</label>
									<div style="margin-left:15px;" class="fileinput fileinput-new" data-provides="fileinput">
										<div class="fileinput-new thumbnail" style="width: 310px; height: 200px;" data-trigger="fileinput">
											<img src="http://placehold.it/310x200" alt="">
										</div>
										<div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 310px; max-height: 200px"></div>
										<div>
											<span class="btn btn-white btn-file">
												<span class="fileinput-new">Chọn ảnh</span>
												<span class="fileinput-exists">Thay đổi</span>
												<input type="file" name="imgdetail" accept="image/*">
											</span>
											<a href="#" class="btn btn-orange fileinput-exists" data-dismiss="fileinput">Xoá</a>
										</div>
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">Tên bài viết</label>
									
									<div class="col-sm-5">
									
											<input type="text" name="name" id="name" class="form-control" placeholder="Tên bài viết" required>
									
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">Mô tả ngắn</label>
									
									<div class="col-sm-8">
										<textarea name="description" class="textarea" placeholder="Thông tin mô tả ngắn hiển thị trên trang chủ" style="width: 100%; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
											
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">Nội dung bài viết</label>
									
									<div class="col-sm-8">
										<textarea name="description" class="textarea" placeholder="Nội dùng bài viêt" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
											
									</div>
								</div>
								
								<div class="form-group">
									<label class="col-sm-3 control-label">Ẩn/hiện bài viết</label>
								
									<div class="col-sm-5">
							
										<div class="bs-example">			
											<div class="make-switch" data-on="primary" data-off="info">
												<input type="checkbox" name="checkbox" checked>
											</div>
										</div>
										
									</div>
								</div>

														
						</div>
					</div>
			</div>

			<div class="form-group">	
				<div class="col-sm-8" style="text-align: center;">
		
					<div class="bs-example">	
						<button type="submit" class="btn btn-green btn-icon">
							Thêm bài viết<i class="entypo-check"></i>
						</button>
					</div>
					
				</div>
			</div>	
			</form>
		</div>
		
		<br />

		<!-- Footer -->
		{{>footer-admin}}
	</div>


		


