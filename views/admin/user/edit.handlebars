
	

	<div class="main-content">
				
		{{>header-admin}}
		
		<hr />
		{{>breadcrum}}
		<h2>{{title}}</h2>
		<div class="row">
			<div class="col-md-12">
					
					<div class="panel panel-primary" data-collapsed="0">
					
						<div class="panel-heading">
							<div class="panel-title">
								{{title}}
							</div>
							
						</div>
						
						<div class="panel-body">
							
							<form role="form" method="post" id="editcate" class="form-horizontal form-groups-bordered">
								<div class="form-group">
									<label class="col-sm-3 control-label">ID user</label>
									<div class="col-sm-5">
										<input type="text" class="form-control" value="{{user_e.id}}" disabled>
										<input type="hidden" name="id" class="form-control" value="{{user_e.id}}">
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Email</label>
									
									<div class="col-sm-5">
										<input type="text" class="form-control" value="{{user_e.email}}" disabled>
										<input type="hidden" name="email" class="form-control" value="{{user_e.email}}">
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Họ và tên</label>
									
									<div class="col-sm-5">
										<input type="text" disabled name="fullname" class="form-control" value="{{user_e.fullname}}" required>
									</div>
								</div>
								
								<div class="form-group">
									<label class="col-sm-3 control-label">Số điện thoại</label>
									
									<div class="col-sm-5">
										<input type="text" disabled name="phone" class="form-control" value="{{user_e.phone}}" required>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Địa chỉ</label>
									
									<div class="col-sm-5">
										<input type="text" disabled name="phone" class="form-control" value="{{user_e.address}}" required>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Ngày sinh</label>
									
									<div class="col-sm-5">
										<input type="text" disabled name="phone" class="form-control" value="{{user_e.birthday}}" required>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Giới tính</label>
									
									<div class="col-sm-5">
										{{#if sex}}
											<input type="text" disabled name="phone" class="form-control" value="Nam" required>
										{{else}}
											<input type="text" disabled name="phone" class="form-control" value="Nữ" required>
										{{/if}}
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Quyền</label>
									{{#ifCond user.role_id '==' 3}}
									<div class="col-sm-5">
										<select class="form-control" name="role_id">											
											<option value="1">Người dùng</option>
											<option value="2">Cộng tác viên</option>
										</select>
									</div>
									{{/ifCond}}
									{{#ifCond user.role_id '==' 4}}
									<div class="col-sm-5">
										<select class="form-control" name="role_id">											
											<option value="1">Người dùng</option>
											<option value="2">Cộng tác viên</option>
											<option value="3">Quản trị viên</option>
										</select>
									</div>
									{{/ifCond}}
								</div>

								<div class="form-group">	
									<div class="col-sm-8" style="text-align: center;">
							
										<div class="bs-example">	
											<button type="submit" class="btn btn-green btn-icon">
												Sửa thông tin người dùng<i class="entypo-check"></i>
											</button>
										</div>
										
									</div>
								</div>							
							
							</form>
						</div>
				</div>
			</div>
		</div>
		<br />
		
		<!-- Footer -->
		{{>footer-admin}}
	</div>


		


	
