
	<div class="main-content">
				
		{{>header-admin}}
		
		<hr />
		{{>breadcrum}}
		<h2>{{title}}</h2>
		{{#if message}}
		    <div class="alert alert-success">{{message}}</div>
		{{/if}}
		<div class="row">
			<div class="col-md-12">
					
					<div class="panel panel-primary" data-collapsed="0">
					
						<div class="panel-heading">
							<div class="panel-title">
								{{title}}
							</div>
							
						</div>	
						
						<div class="panel-body">
						<table class="table table-bordered datatable" id="table-1">
							<thead>
								<tr>
									<th data-hide="phone">ID</th>
									<th>Email</th>
									<th data-hide="phone">Họ và tên</th>
									<th data-hide="phone,tablet">Trạng thái</th>
									<th>Quyền</th>
									<th>Thao tác</th>
								</tr>
							</thead>
							<tbody>
								{{#each users}}
								<tr class="odd gradeX">
									<td>{{id}}</td>
									<td>{{email}}</td>
									<td>{{fullname}}</td>
									<td id="bann">
										{{#if active}}
											Còn sống
										{{else}}
											Ra đảo
										{{/if}}
									</td>
									<td>
										{{role_name}}
									</td>
									<td class="center">
										<input type="hidden" id="id" value="{{id}}">
									{{#ifCond ...user.role_id '<=' role_id}}

										{{#ifCond ...user.id '!==' id}}
										<a href="javascript:void(0)" disabled class="btn btn-primary btn-sm btn-icon icon-left">
											<i class="entypo-pencil"></i>
											Sửa
										</a>

										{{#if active}}
										<a href="javascript:void(0)" disabled class="btn btn-danger btn-sm btn-icon icon-left">
											<i class="entypo-cancel"></i>
											Cấm
										</a>
										{{else}}
										<a href="javascript:void(0)" disabled class="btn btn-success btn-sm btn-icon icon-left">
											<i class="entypo-cancel"></i>
											Huỷ cấm
										</a>
										{{/if}}
										
										{{/ifCond}}
										{{#ifCond ...user.id '==' id}}
										<a href="/admin/user/edit/{{id}}" class="btn btn-primary btn-sm btn-icon icon-left">
											<i class="entypo-pencil"></i>
											Sửa							
										</a>
										<a href="javascript:void(0)" disabled class="btn btn-danger btn-sm btn-icon icon-left">
											<i class="entypo-cancel"></i>
											Cấm
										</a>
										{{/ifCond}}
									{{/ifCond}}

									{{#ifCond ...user.role_id '>' role_id}}
										<a href="/admin/user/edit/{{id}}" class="btn btn-primary btn-sm btn-icon icon-left">
											<i class="entypo-pencil"></i>
											Sửa							
										</a>
										{{#if active}}
										<a href="javascript:void(0)" class="btn btn-danger btn-sm btn-icon icon-left banUser">
											<i class="entypo-cancel"></i>
											Cấm
										</a>
										{{else}}
										<a href="javascript:void(0)" class="btn btn-success btn-sm btn-icon icon-left unbanUser">
											<i class="entypo-cancel"></i>
											Huỷ cấm
										</a>
										{{/if}}
									{{/ifCond}}
									</td>
								</tr>
								{{/each}}
							</tbody>
							<tfoot>
								<tr>
									<th data-hide="phone">ID</th>
									<th>Email</th>
									<th data-hide="phone">Họ và tên</th>
									<th data-hide="phone,tablet">Trạng thái</th>
									<th>Quyền</th>
									<th>Thao tác</th>
								</tr>
							</tfoot>
						</table>	

							
						</div>
				</div>
			</div>
		</div>
		<br />
		
		<!-- Footer -->
		{{>footer-admin}}
	</div>


