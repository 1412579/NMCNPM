<div class="container">
	<div class="single">

		<div class="blog-to">


			<div class="blog-top">
				<h3 class="fast" href="#">{{article.title}}</h3>
				<p>Đăng bởi:
					<a href="#">{{article.user_name}}</a> |
					<a href="#">{{article.cate_name}}</a> |
				</p>
				<p class="sed">
					{{{article.content}}}

				</p>
				<div class="clearfix"> </div>
			</div>
			<div class="clearfix"> </div>
			<div class="allbar">
				<ul>
					<li>
						<a href="javascript:" id="viewcount" class="btn btn-success">
							<span class="glyphicon glyphicon-thumbs-up"></span> 100</a>
					</li>
					<li>
						<a href="javascript:" class="btn btn-default">
							<span class="glyphicon glyphicon-eye-open"></span> {{article.view}}</a>
					</li>
				</ul>
			</div>
			<div id="fb-root"></div>
						<script>(function(d, s, id) {
						  var js, fjs = d.getElementsByTagName(s)[0];
