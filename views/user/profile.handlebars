<div class="container">
    {{> breadcrum-user}}
    <div class="row">
			<div class="col-md-offset-3 col-md-6 form">	
                <h2>Chỉnh sửa thông tin cá nhân</h2>
			    <form >
					<div class="input-group">
						<h3>Avatar</h3>
						<input type="file">
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-user"></i></span>
						<input type="text" class="form-control" maxlength="50" placeholder="Họ và tên" >
					</div>
					<span class="help-block"></span>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-envelope" style="font-size: 0.7em;"></i></span>
						<input type="text" class="form-control" maxlength="50" placeholder="Email" disabled>
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-chrome" style="font-size: 0.7em;"></i></span>
						<input type="text" class="form-control" maxlength="50" placeholder="Địa chỉ trang web">
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-facebook" style="font-size: 0.7em;"></i></span>
						<input type="text" class="form-control" maxlength="50" placeholder="Facebook">
					</div>
					<span class="help-block"></span>				
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-address-card-o"></i></span>
						<textarea class="form-control" name="" id="" cols="30" rows="3" placeholder="Chữ ký"></textarea>
					</div>
					<button class="btn btn-lg btn-danger btn-block" type="submit">Hoàn tất chỉnh sửa</button>
				</form>
				<br>
				<div class="alert alert-success">
					Cập nhật thông tin thành công!
				</div>
			</div>
    	</div>
</div>